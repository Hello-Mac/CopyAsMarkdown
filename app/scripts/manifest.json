{
  "name": "Markdownize",
  "version": "0.0.1",
  "manifest_version": 2,
  "default_locale": "en",
  "description": "Convert Html to Markdown.",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },

  "background": {
    "scripts": ["scripts/background.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "html2markdown"
  },
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "css": [
      "styles/main.css"
    ],
    "js": [
      "scripts/markdown_dom_parser.js",
      "scripts/html2markdown.js",
      "scripts/contentscript.js"
    ],
    "run_at": "document_end",
    "all_frames": false
  }],
  "permissions": [
    "*://*/*"
  ]
}