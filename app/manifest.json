{
  "name": "html2markdown",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Convert Html to Markdown.",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "html2markdown"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "css": [
      "styles/main.css"
    ],
    "js": [
      "scripts/contentscript.js"
    ],
    "run_at": "document_end",
    "all_frames": false
  }]
}